
@page "/game"
@inject IHubContext<GameHub> GameHubContext

<h1>Game World</h1>
<button @onclick="MovePlayer">Move Forward</button>

@code {
    private async Task MovePlayer()
    {
        // Example call to move the player
        await GameHubContext.Clients.All.SendAsync("UpdatePlayerPosition", "player1", 1.0f, 0.0f, 1.0f, 90.0f);
    }
}
